<%- include('partials/header') %>

<main>
  <% let procedimento = "" %>
  <% let solucao = "" %>
  <% let teste = "" %>
  <section id="main-section">
    <div class="section-header">
      <h2>Ocorrência: <%=nocorrencia %></h2>
      <div class="section-header-links">
        <a class="aTag" href="javascript:history.back()">
          <button class="btn btn-primary" type="button" name="button">Voltar</button>
        </a>
      </div>
    </div>
    <div class="section-body">
      <div class="divDoForm">
        <form id="resolverForm" action="/resolver/<%=nocorrencia%>" method="post">
          <%  selecionados.forEach(function(dado){ %>
          <% procedimento = dado.procedimentos %>
          <% solucao = dado.versaoSolucao %>
          <% teste = dado.baseTestada %>
          <%  }); %>
          <div class="cadastroDiv2">
            <label for="">Procedimentos</label>
            <textarea name="prodOcorrencia" rows="8" cols="60"><%=procedimento%></textarea>
          </div>
          <div class="cadastroDiv3">
            <div>
              <label>Versão Solução:</label>
              <input type="text" name="versaoSolucao" value="<%=solucao %>">
            </div>
            <div>
              <label for="">Base Testada:</label>
              <input type="text" name="baseTestada" value="<%=teste %>">
            </div </div>
        </form>
      </div>
    </div>
    <div class="botoesCadastrar">
      <a class="aTag" href="javascript:history.back()"><button type="button" class="btn btn-danger" name="button">CANCELAR</button></a>
      <button type="submit" class="btn btn-dark" name="button" form="resolverForm">INCLUIR</button>
    </div>


  </section>
</main>





<%- include('partials/footer') %>
